<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="名称"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="头"
            android:textSize="18sp"
            />

        <RadioGroup
            android:id="@+id/rg_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_head_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="无"
                />
            <RadioButton
                android:id="@+id/rb_head_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="有"
                />


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手"
            android:textSize="18sp"
            />

        <RadioGroup
            android:id="@+id/rg_hand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_hand_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="无"
                />
            <RadioButton
                android:id="@+id/rb_hand_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="有"
                />


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="衣"
            android:textSize="18sp"
            />

        <RadioGroup
            android:id="@+id/rg_cloth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_cloth_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="无"
                />
            <RadioButton
                android:id="@+id/rb_cloth_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="有"
                />


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="腰"
            android:textSize="18sp"
            />

        <RadioGroup
            android:id="@+id/rg_waist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_waist_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="无"
                />

            <RadioButton
                android:id="@+id/rb_waist_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="有"
                />


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="脚"
            android:textSize="18sp"
            />

        <RadioGroup
            android:id="@+id/rg_foot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_foot_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="无"
                />
            <RadioButton
                android:id="@+id/rb_foot_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="有"
                />

        </RadioGroup>

    </LinearLayout>



</LinearLayout>
